<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.burninglove.dma.burninglove.fragments.OneFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayoutChatFriend"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/profilePicture1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/cat_sporty"
            android:scaleType="centerCrop"
            android:layout_below="@+id/profile"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="212dp"
            android:layout_height="24dp"
            android:layout_below="@+id/profile"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:textSize="20dp"
            android:text="Teman" />

        <TextView

            android:layout_width="212dp"
            android:layout_height="20dp"
            android:layout_below="@+id/profile"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="80dp"
            android:textSize="10dp"
            android:text="Mau main kemana nanti? Jadi mau ke..." />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="320dp"
            android:textSize="10dp"
            android:text="17:33" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="84dp"
        android:background="#ccc" />

    <FrameLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayoutChatGroup"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/frameLayoutChatFriend"
        >

        <ImageView
            android:id="@+id/profilePicture2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/cat_sporty"
            android:scaleType="centerCrop"
            android:layout_below="@+id/profile"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp" />

        <TextView
            android:layout_width="212dp"
            android:layout_height="24dp"
            android:layout_below="@+id/profile"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:textSize="20dp"
            android:text="Group Olahraga (30)" />

        <TextView

            android:layout_width="212dp"
            android:layout_height="20dp"
            android:layout_below="@+id/profile"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="80dp"
            android:textSize="10dp"
            android:text="Nanti kita kumpul ya di lapangan" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="320dp"
            android:textSize="10dp"
            android:text="17:05" />

    </FrameLayout>

</RelativeLayout>
