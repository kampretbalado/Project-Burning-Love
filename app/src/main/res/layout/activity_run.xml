<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.burninglove.dma.burninglove.RunActivity">

    <Button
        android:id="@+id/btn_start"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Start"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp" />

    <TextView
        android:id="@+id/tv_counter_steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="0"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/tv_counter_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_counter_steps"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:text="Counter:"
        android:textSize="50dp" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_start"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="30dp"
        android:background="@android:color/holo_red_light"
        android:padding="10dp"
        android:text="Berhenti"
        android:textColor="@android:color/white"
        android:textSize="30dp" />

</RelativeLayout>
