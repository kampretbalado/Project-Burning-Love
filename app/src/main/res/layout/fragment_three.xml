<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.burninglove.dma.burninglove.Timeline"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_timeline_top"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cat_sporty" />

            <ImageView
                android:id="@+id/iv_profile_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_margin="16dp"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/tv_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_profile_picture"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/iv_profile_picture"
                android:text="Nama Orangnya"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/nama"
                android:orientation="vertical"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/tv_activity_profile_picture"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@mipmap/ic_launcher_round" />

                    <TextView
                        android:id="@+id/tv_activity_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/tv_activity_profile_picture"
                        android:layout_marginLeft="8dp"
                        android:text="Nama Orangnya shared a status update"
                        android:textStyle="bold" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_activity_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Lorem ipsum dolor sit amet, enim appareat apeirian eam an. Alia appellantur duo ea. Sonet integre et sed, est case accusata platonem cu. Eam noster salutandi disputando ne, at pro meis pertinacia mnesarchum. Vis ut voluptatum instructior, doctus laboramus torquatos eu vim. Semper suavitate ius no, ei doctus iracundia sea." />

                <TextView
                    android:id="@+id/tv_activity_timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="1 hour ago"
                    android:textColor="#999"
                    android:textStyle="italic" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp">


                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Summary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_berat_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="65"
                    android:textSize="32sp"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_berat_label"
                    app:layout_constraintTop_toBottomOf="@+id/tv_berat_label" />

                <TextView
                    android:id="@+id/tv_tinggi_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="165"
                    android:textSize="32sp"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_tinggi_label"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tinggi_label" />

                <TextView
                    android:id="@+id/tv_tinggi_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Tinggi Badan"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_berat_value" />

                <TextView
                    android:id="@+id/tv_bmi_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="BMI"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_calorie_value" />

                <TextView
                    android:id="@+id/tv_bmi_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="21.4"
                    android:textSize="32sp"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_bmi_label"
                    app:layout_constraintTop_toBottomOf="@+id/tv_bmi_label" />

                <TextView
                    android:id="@+id/tv_tinggi_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:text="cm"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_tinggi_value"
                    app:layout_constraintLeft_toRightOf="@+id/tv_tinggi_value" />

                <TextView
                    android:id="@+id/tv_calorie_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:text="cal"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_calorie_value"
                    app:layout_constraintLeft_toRightOf="@+id/tv_calorie_value" />

                <TextView
                    android:id="@+id/tv_berat_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:text="Kg"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_berat_value"
                    app:layout_constraintLeft_toRightOf="@+id/tv_berat_value" />

                <TextView
                    android:id="@+id/tv_calorie_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Kalori Terbakar "
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tinggi_value" />

                <TextView
                    android:id="@+id/tv_calorie_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="329"
                    android:textSize="32sp"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_calorie_label"
                    app:layout_constraintTop_toBottomOf="@+id/tv_calorie_label" />

                <TextView
                    android:id="@+id/tv_berat_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Berat Badan"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView21" />
            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
